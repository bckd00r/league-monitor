<Window x:Class="LeagueMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LeagueMonitor.ViewModels"
        mc:Ignorable="d"
        Title="League Monitor" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="League Monitor" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="{Binding RelayServerInfo}" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Connection Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Disconnected"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="Connected"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Mode Selection / Control Panel -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,15">
            <Grid>
                <!-- Mode Selection (Visible when not running) -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentMode}" Value="Selection">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Select Mode" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Controller Option -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Controller" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Monitor League Client, broadcast restart commands to followers. Creates a new session." 
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,8,0,15"/>
                                <Button Content="Start as Controller" 
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding StartAsControllerCommand}"/>
                            </StackPanel>
                        </Border>

                        <!-- Follower Option -->
                        <Border Grid.Column="2" 
                                Background="{StaticResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Follower" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Join a session and receive commands from controller. Enter token or leave empty for auto-join." 
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,8,0,10"/>
                                <TextBox Text="{Binding FollowerToken, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,10">
                                    <TextBox.Tag>
                                        <TextBlock Text="Session Token (optional)"/>
                                    </TextBox.Tag>
                                </TextBox>
                                <Button Content="Start as Follower" 
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding StartAsFollowerCommand}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Running Panel (Visible when running) -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Controller Mode"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentMode}" Value="Follower">
                                                    <Setter Property="Text" Value="Follower Mode"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <!-- Process Count (Controller only) -->
                                <Border Background="{StaticResource PrimaryBrush}" 
                                        CornerRadius="4" 
                                        Padding="8,2" 
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentMode}" Value="Follower">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding ProcessCount, StringFormat='Processes: {0}'}" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextBrush}"/>
                                </Border>

                                <!-- VGC Process Status (Controller only) -->
                                <Border CornerRadius="4" 
                                        Padding="8,2" 
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentMode}" Value="Follower">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VgcProcessRunning}" Value="False">
                                                    <Setter Property="Background" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="12" Foreground="{StaticResource TextBrush}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="VGC: Running"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding VgcProcessRunning}" Value="False">
                                                        <Setter Property="Text" Value="VGC: Stopped"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <!-- VGC Service Status (Controller only) -->
                                <Border Background="#607D8B" 
                                        CornerRadius="4" 
                                        Padding="8,2" 
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentMode}" Value="Follower">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding VgcServiceStatus, StringFormat='Service: {0}'}" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextBrush}"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="{Binding StatusText}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>

                            <!-- Session Token Display -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SessionToken, Converter={x:Null}}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SessionToken}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding CurrentMode}" Value="Controller"/>
                                                    <Condition Binding="{Binding SessionToken, Converter={x:Null}}" Value="{x:Null}"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                
                                <TextBlock Text="Token: " 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        CornerRadius="4" 
                                        Padding="8,4">
                                    <TextBlock Text="{Binding SessionToken}" 
                                               Foreground="{StaticResource TextBrush}"
                                               FontFamily="Consolas"/>
                                </Border>
                                <Button Content="Copy" 
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="12,4"
                                        Margin="8,0,0,0"
                                        Command="{Binding CopyTokenCommand}"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="Stop" 
                                Style="{StaticResource DangerButton}"
                                VerticalAlignment="Top"
                                Command="{Binding StopCommand}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Panel -->
        <Border Grid.Row="2" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Logs" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"/>
                    <Button Content="Clear" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="12,4"
                            HorizontalAlignment="Right"
                            Command="{Binding ClearLogsCommand}"/>
                </Grid>

                <Border Grid.Row="1" 
                        Background="{StaticResource SurfaceBrush}" 
                        CornerRadius="8">
                    <ListBox ItemsSource="{Binding Logs}" 
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingPanel.ScrollUnit="Pixel"
                             x:Name="LogListBox">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,4"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FormattedMessage}" 
                                           FontFamily="Consolas" 
                                           FontSize="12"
                                           TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="WARN">
                                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="SUCCESS">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="INFO">
                                                    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Margin="0,15,0,0">
            <TextBlock Text="League Monitor v1.0 - Relay server stays in TypeScript" 
                       FontSize="11" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
